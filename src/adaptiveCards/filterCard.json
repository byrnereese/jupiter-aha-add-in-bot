{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "text": "Setup a ${filter.type} filter",
            "wrap": true,
            "size": "ExtraLarge",
            "weight": "Bolder"
        },
        {
            "type": "Input.ChoiceSet",
            "choices": [
                {
                    "$data": "${fields}", 
                    "title": "${label}",
                    "value": "${id}"
                }
            ],
            "placeholder": "Select ${filter.type} field",
            "label": "What field do you want to filter by?",
            "isRequired": true,
            "errorMessage": "Please select the field to filter for.",
            "id": "filter_field",
            "value": "${filter.field}"
        },
        {
            "type": "Input.ChoiceSet",
            "choices": [
                { "title": "equals",            "value": "eq" }
                ,{ "title": "not equals",       "value": "ne" }
                ,{ "title": "contains",         "value": "contains" }
                ,{ "title": "does not contain", "value": "not_contains" }
            ],
            "placeholder": "Select operation",
            "isRequired": true,
            "errorMessage": "Please select an operation.",
            "id": "filter_op",
	    "value": "${filter.op}"
        },
        {
            "type": "Input.Text",
            "id": "filter_value",
            "placeholder": "Value",
            "spacing": "None",
	    "value": "${filter.value}"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Create/update filter",
                    "style": "positive",
                    "data": {
                        "actionType": "save_filter",
                        "filter_type": "${filter.type}",
                        "botId": "${botId}",
                        "groupId": "${groupId}"
                    }
                }
            ]
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://raw.githubusercontent.com/ringcentral/github-notification-app/main/icons_v2/feedback.png",
                            "size": "Small",
                            "style": "Person",
                            "width": "16px"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "[Improve this add-in: report bugs and feature requests](https://docs.google.com/forms/d/e/1FAIpQLSfCwi9bUT0WJW3Ug8umbNyd8NnmAZiVIcOHwXto6B9syKTnjA/viewform?usp=pp_url&entry.492712114=Aha!+Add-in)",
                            "weight": "Lighter",
                            "wrap": true,
                            "size": "Small",
                            "spacing": "None"
                        }
                    ]
                }
            ]
        }
    ]
}
