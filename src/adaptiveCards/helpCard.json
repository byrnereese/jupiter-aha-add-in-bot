{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "text": "How can I help?",
            "wrap": true,
            "size": "ExtraLarge",
            "weight": "Bolder"
        },
        {
            "type": "TextBlock",
            "text": "Below are the things I can help you with. Go ahead, click them, they're buttons.",
            "wrap": true
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Connect to Aha!",
                    "style": "positive",
		    "data": {
			"actionType": "auth",
			"botId": "${botId}",
			"groupId": "${groupId}",
			"aha_domain": "${ahaDomain}"
		    }
                },
                {
                    "type": "Action.Submit",
                    "title": "Help you setup Aha!",
		    "data": {
			"actionType": "select_workspace",
			"botId": "${botId}",
			"groupId": "${groupId}"
		    }
                },
                {
                    "type": "Action.Submit",
                    "title": "Setup an incoming event filter",
                    "data": {
                        "actionType": "select_filter_type",
                        "botId": "${botId}",
                        "groupId": "${groupId}"
                    }
                },
                {
                    "type": "Action.Submit",
                    "title": "Disconnect from Aha!",
                    "style": "destructive",
        		    "data": {
            			"actionType": "disconnect",
            			"botId": "${botId}",
            			"groupId": "${groupId}"
        		    }
                }
            ]
        }
    ]
}
