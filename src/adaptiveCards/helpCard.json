{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "text": "How can I help?",
            "wrap": true,
            "size": "ExtraLarge",
            "weight": "Bolder"
        },
        {
            "type": "TextBlock",
            "text": "Below are the things I can help you with. Go ahead, click them, they're buttons.",
            "wrap": true
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.OpenUrl",
                    "url": "${loginUrl}",
                    "style": "positive",
                    "title": "Connect to Aha!"
                },
                {
                    "type": "Action.Submit",
                    "title": "Connect to Aha! (w/domain)",
                    "style": "positive"
                },
                {
                    "type": "Action.Submit",
                    "title": "Help you setup Aha!"
                },
                {
                    "type": "Action.Submit",
                    "title": "Setup an incoming event filter"
                },
                {
                    "type": "Action.Submit",
                    "title": "Disconnect from Aha!",
                    "style": "destructive"
                }
            ]
        }
    ]
}